        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activity.SplashActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.LoginActivity" />
        <activity
            android:name=".Activity.MainActivity"
            android:theme="@style/AppTheme.SimpleCoordinatorTheme" />
        <activity
            android:name=".Activity.NewsDetailActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.KomoditasDetailActivity"
            android:theme="@style/AppTheme.SimpleCoordinatorTheme" />
        <activity android:name=".Activity.SimulationActivity" />
        <activity android:name=".Activity.InvestNowActivity" />
        <activity android:name=".Activity.EditProfileActivity" />
        <activity android:name=".Activity.UpdateProgressInvestActivity"
            android:theme="@style/AppTheme.SimpleCoordinatorTheme"></activity>
    </application>

</manifest>