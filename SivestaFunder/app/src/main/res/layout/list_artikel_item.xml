<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="@dimen/medium_top_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_artikel"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:layout_marginRight="@dimen/small_margin"
            android:src="@mipmap/ic_launcher"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:id="@+id/art_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fontPath="@string/alegreya_sans_bold"
                tools:ignore="MissingPrefix"
                android:layout_marginBottom="3dp"
                android:text="Peluang di Circular Economy"/>

            <TextView
                android:id="@+id/art_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/art_title"
                android:gravity="center"
                android:layout_marginBottom="3dp"
                android:drawablePadding="3dp"
                android:drawableLeft="@drawable/cal_spring"
                android:text="Dec 04"/>

            <TextView
                android:id="@+id/art_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/art_date"
                android:layout_below="@id/art_title"
                android:layout_marginLeft="@dimen/medium_top_margin"
                android:drawableLeft="@drawable/man_user_48"
                android:drawablePadding="3dp"
                android:text="Muhaimin"/>

            <TextView
                android:id="@+id/art_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/art_date"
                android:text="Dua abad terakhir perekonomian dunia tumbuh sangat cepat"/>

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>